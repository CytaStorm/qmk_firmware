{
    "keyboard_name": "Reflexion",
	"manufacturer": "Markus Knutsson",
    "url": "",
    "maintainer": "TweetyDaBird",
	
    "platform": "STM32",
    "processor": "STM32F401",
    "processor_type": "arm",
    "protocol": "ChibiOS",
	"board": "BLACKPILL_STM32_F401",
    "bootloader": "stm32-dfu",
    "bootloader_instructions": "Short marked pads on PCB, or hold top-outer key when plugging in each hand.",
	
	"debounce" : 5,
		
	"features": {
		"bootmagic": true,
		"command": false,
		"console": false,
		"extrakey": true,
		"mousekey": true,
		"nkro": true,
		"rgblight": true,
		"encoder": true,
		"encoder_map": true,
		"audio": false,
		"split": true,
		"magic": false,
		"grave_esc": false,
		"space_cadet": false
		"tap_dance": false,
		"auto_shift": true,
		"oled": true
	},
    
	"diode_direction": "COL2ROW",
    
	"matrix_size": {
        "cols": 7,
        "rows": 10
    },
	
	"matrix_pins": {
        "cols": ["B12", "B13", "B0", "A7", "A6", "A5", "A4"],
        "rows": ["A8", "B5", "B4", "B3", "A15"]
    },
	
    "encoder": {
        "rotary": [
            { "pin_a": "B14", "pin_b": "B15", "resolution": 8 }
            { "pin_a": "B15", "pin_b": "B8", "resolution": 8 }
			{ "pin_a": "B8", "pin_b": "B9", "resolution": 8 }
        ]
    }
    
	"usb": {
        "device_version": "1.0.0",
        "pid": "0x1248",
        "vid": "0xFEED",
		"force_nkro": true
    },
	
	"rgblight": {
        "led_count": 68,
		"split": true,
		"split_count": [ 34, 34 ],
        "hue_steps": 17,
        "saturation_steps": 17,
        "brightness_steps": 17,
		"max_brightness": 175,
		"animations": {
            "breathing": true,
			"rainbow_mood": true,
			"static_gradient": true
        }
    },
	

	"split": {
		"enabled": true,
		"main": "pin",
		"transport": {
			"protocol": "serial_usart",
			"sync_matrix_state": true,
			"sync_modifiers": true,                        
		},
		"usb_detect": {
			"enabled": true,
            "polling_interval": 10,
            "timeout": 2000
		}
		"encoder": {
			"right": {
				"rotary": [
					{ "pin_a": "B14", "pin_b": "B15", "resolution": 8 }
					{ "pin_a": "B15", "pin_b": "B8", "resolution": 8 }
					{ "pin_a": "B8", "pin_b": "B9", "resolution": 8 }
				]
			}
		}
	},	
		
